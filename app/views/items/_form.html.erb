<div class="well">
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :type=>"text", :class=>"form-control" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :about %><br>
    <%= f.text_area :about, :class=>"form-control", :rows=>"3" %>
  </div>
  <br/>
   <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, :type=>"text", :class=>"form-control" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_field :start, as: :date %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_field :end,as: :date %>
  </div>
  <div class="field">

    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<br/>
</div>