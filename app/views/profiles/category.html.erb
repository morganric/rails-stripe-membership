
<div class="col-md-6 col-md-offset-3 ">

<br/>
<h1  class="pull-center">
  <%= link_to "#{@profile.first_name} #{@profile.second_name}", vanity_profile_path(@profile.username) %> 
</h1>

</div>

<div class="col-md-6 col-md-offset-3">

  

 <ul class="nav nav-pills pull-center">
    
    
      <!-- links -->
      <% @categories.each do |cat| %>
      <li class="menu"><%= link_to cat.name, vanity_category_path( :category_id => cat.id, :user_id => @profile.username) %></li>
      <% end %>

     <li ><a href="#bio" data-toggle="tab">About</a></li>
    
  </ul>

<hr/>
</div>


</div>

<div class="tabbable"> <!-- Only required for left/right tabs -->
  
  <div class="tab-content col-md-8 col-md-offset-2">
    
    <div class="tab-pane " id="bio">
     <br/>
     <div class="col-md-2 col-md-offset-2">
     <%= image_tag(@profile.image.url(:standard)) %>
     </div> 
      <p class="well col-sm-5 col-md-offset-1 ">
		  <%= @profile.bio %>
		 
    		<span class="pull-right" >
          <% if current_user and current_user.admin? %>
    			<%= link_to 'Edit', edit_profile_path(@profile)  %> 
          <% end %>
    		</span>
		</p>
    </div>

   
    <div class="tab-pane active" id="all">
     <br/>

    <div class="col-md-8 col-md-offset-2" >

     <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">

  
     <% @projects.each do |project| %>
      <div class=" pull-left col3 box" %>
     <%= link_to image_tag(project.image.url(:standard)), project_path(project) %>
      <h3 class="hidden"><%= link_to project.title, project_path(project) %></h3>
      </div>
     <% end %>

</div>
</div>
    </div>



  </div>
</div>


<p>
  <%= @profile.twitter %>
</p>


</div>





