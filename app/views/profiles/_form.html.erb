    <%= f.label :second_name %><br>
    <%= f.text_field :second_name %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <br/>
    <%= image_tag(@profile.image.url(:thumb)) %>
  
  </div>
    <br/>
  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>
   <div class="field ">
    <label>website</label><br>
    <%= f.text_field :domain %>
  </div>
  <h3>Social Links</h3>
  <div class="field">
    <%= f.label :twitter %><br>
    @<%= f.text_field :twitter %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :tumblr %><br>
    <%= f.text_field :tumblr %>.tumblr.com
  </div>
  <br/>
  <div class="field">
    <%= f.label :instagram %><br>
    www.instagram.com/<%= f.text_field :instagram %>
  </div>
  <div class="field hidden">
    <%= f.label :cover %><br>
    <%= f.text_field :cover %>
  </div>
  <div class="field hidden">
    <%= f.label :user_id %><br>
