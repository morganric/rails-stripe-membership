
<h1>Recent Projects</h1>
<hr/>
<div class="col-md-12">
<div class="col-md-8">
<ul>
<% @projects.each do |project| %>
	<li>
	<%= image_tag(project.image.url(:thumb)) %>
		<h3 class=""><%= link_to project.title, vanity_project_path(project, :user_id => project.user.profile.slug) %></h3>
	<label class="label label-primary"><%= pluralize(project.views, 'view') %></label>	
<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
 <%= link_to 'Edit', edit_project_path(project) %> | 
<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<% end %>
	</li>
	<hr/>
<% end %>
	</ul>

<%= paginate @projects %>
</div>
<div class="col-md-4">
	<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">My Stats</h3>
  </div>
  <div class="panel-body">
  	<ul>
    <li>Total Projects: <%= @projects.count %></li>
     <li>Total views: <%= @views %></li>
     </ul>
  </div>
</div>

  <div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Total Stats</h3>
  </div>
  <div class="panel-body">
    <ul>
    <li>Total Projects: <%= @all.count %></li>
     <li>Total views: <%= @allviews %></li>
     </ul>
  </div>
</div>


</div>