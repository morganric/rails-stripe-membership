<div class="col-md-12" >
<br/>
<h1 class="pull-center"><%= image_tag('ffollio-black.png', width: 40) %> FFOLLIO<br/>
<small>Create a Portfolio</small>
</h1>
<br/>
</div>

<div style="pull-center">
  <!-- Nav tabs -->
  <div class="nav nav-top" >
    <span role="presentation" class=" menu "><a href="<%= root_path %>">Latest</a></span>
    <span role="presentation" class="  menu "><a href="<%= popular_path %>">Popular</a></span>
    <span role="presentation" class="menu active"><a href="<%= random_path %>" >Random</a></span>
   
  </div>
<hr/>

</div>
   <!-- Tab panes -->
      
  <div id="masonry-container" class="transitions-enabled infinite-scroll centered clearfix">

  
     <% @random.each do |project| %>
       <div class="col3 box" %>
      <% if project.video == nil || project.video == '' %> 
     <%= link_to image_tag(project.image.url(:standard), width: '300'), vanity_project_path(:user_id => project.user.profile.slug, :id => project.id) %>
     <% else %>
     <%= link_to cl_image_tag("#{project.title}.jpg",:crop => :fill, :resource_type=>"video", :overlay => "play_square.png", :crop => :fill , :html_width => '300', :html_height => '200'), vanity_project_path(:user_id => project.user.profile.slug, :id => project.id) %>
     <% end %>
      <h3 class="hidden"><%= link_to project.title, vanity_project_path(:user_id => project.user.profile.slug, :id => project.id) %></h3>
      </div>
     <% end %>

</div>




