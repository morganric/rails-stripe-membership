<div class="pull-center" >
<h1 ><%= image_tag('ffollio-black.png', width: 40) %> FFOLLIO<br/>
<small>Create a Portfolio</small>
</h1>
</div>
<hr/>

  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">

  
     <% @projects.each do |project| %>
       <div class=" pull-left col3 box" %>
     <% if project.video == '' %> 
     <%= link_to image_tag(project.image.url(:standard)), project_path(project) %>
     <% else %>
     <%= link_to cl_image_tag("#{project.title}.jpg",:crop => :fill, :resource_type=>"video", :overlay => "play_square.png" , :html_width => 100, :html_height => 200), project_path(project) %>
     <% end %>
      <h3 class="hidden"><%= link_to project.title, project_path(project) %></h3>
      </div>
     <% end %>

</div>


<br>

