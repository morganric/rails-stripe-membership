     <% end %>
      <h3 class="hidden"><%= link_to project.title, project_path(project) %></h3>
      </div>
     <% end %>


</div>


<br>
    </div>
    <div role="tabpanel" class="tab-pane " id="popular">

  <div id="masonry-container" class="transitions-enabled infinite-scroll centered clearfix col-md-10 col-md-offset-1 ">

  
     <% @popular.each do |project| %>
       <div class="col3 box " %>
      <% if project.video == nil || project.video == '' %> 
     <%= link_to image_tag(project.image.url(:standard), width: '300'), project_path(project) %>
